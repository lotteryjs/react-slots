{
  "name": "react-slots-component",
  "version": "1.0.0",
  "description": "A slots machine game component based on React.js",
  "main": "src/ReactUI/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/lotteryjs/react-slots"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "NODE_ENV=development webpack-dev-server --config webpack.config.dev.js --hot",
    "build": "webpack",
    "styleguidist": "styleguidist",
    "build-react-docs": "styleguidist server --config styleguide.config.js",
    "test": "jest"
  },
  "keywords": [
    "slots"
  ],
  "author": "narol",
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.4",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "autoprefixer": "^8.6.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.0.0",
    "node-sass": "^4.9.0",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "react-docgen": "^2.20.1",
    "react-docgen-typescript": "^1.6.0",
    "react-styleguidist": "^7.0.17",
    "sass-loader": "^7.0.2",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^3.5.0",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.1",
    "webpack": "^3.11.0",
    "webpack-cli": "^3.0.1",
    "webpack-dev-server": ">=3.1.11"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "fbemitter": "^2.1.1",
    "is-promise": "^2.1.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  }
}
